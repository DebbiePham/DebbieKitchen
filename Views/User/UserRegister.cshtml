@model User
@{
    ViewData["Title"] = "Register";
    Layout = "_UserLayout";
}

<!-- component -->

    <div class="container w-screen mx-auto flex-1 flex flex-col items-center justify-center p-28">
        <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-1/3" asp-action="CreateUser" asp-controller="User" method="post">
            <div>
                <h1 class="mb-8 text-3xl text-center">Register</h1>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Name"></label>
                <input 
                    type="text"
                    class="block border border-grey-light w-full p-3 rounded mb-4"
                    asp-for="Name"/>
                <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Email"></label>
                <input 
                    type="email"
                    class="block border border-grey-light w-full p-3 rounded mb-4"
                    asp-for="Email"/>
                <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Password"></label>
                <input 
                    type="password"
                    class="block border border-grey-light w-full p-3 rounded mb-4"
                    asp-for="Password"/>
                <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" asp-for="Confirm"></label>
                <input 
                    type="password"
                    class="block border border-grey-light w-full p-3 rounded mb-4"
                    asp-for="Confirm"/>
                <span asp-validation-for="Confirm" class="text-red-500 text-xs italic"></span>
            </div>
            <button
                type="submit"
                class="w-full text-center btn-success py-3 rounded bg-green text-white hover:bg-green-dark focus:outline-none my-1"
            >Create Account</button>
        </form>
        <div class=" mt-6">
            Already have an account? 
            <a class="no-underline border-b border-blue text-blue" href="/debbiekitchen/users/login">
                Log in
            </a>
        </div>
    </div>

    
            
