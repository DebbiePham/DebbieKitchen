@{
    ViewData["Title"] = "New Recipe";
    Layout="_Layout";
}

@model Recipe
<div class="card shadow m-5">
    <div class="card-header text-center">
        <h1>Add New Recipe</h1>
    </div>
    <div class="card-body">
        <form asp-action="CreateRecipe" asp-controller="Admin" method="post">
            <div class=" d-flex flex-row justify-content-around">
                <div class="col-4">
                    <div>
                        <div class="row m-3">
                            <label asp-for="RecipeName" class="ml-1"></label>
                            <input asp-for="RecipeName" class="form-control">
                            <span asp-validation-for="RecipeName" class="text-danger ml-1"></span>
                        </div>
                        <div class="row m-3">
                            <label asp-for="Ingredients" class="ml-1"></label>
                            <textarea asp-for="Ingredients" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Ingredients" class="text-danger ml-1"></span>
                        </div>
                        <div class="row m-3">
                            <label asp-for="Direction" class="ml-1"></label>
                            <textarea asp-for="Direction" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Direction" class="text-danger ml-1"></span>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="row m-3">
                        <label asp-for="Note" class="ml-1"></label>
                        <textarea asp-for="Note" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Note" class="text-danger ml-1"></span>
                    </div>
                    <div class="d-flex flex-row m-3 gap-2">
                        <label asp-for="PrepTimeInMinutes" class="ml-1">Prep Time</label>
                        <input asp-for="PrepTimeInMinutes" >
                        <span asp-validation-for="PrepTimeInMinutes" class="text-danger ml-1"></span>
                    </div>
                    <div class="d-flex flex-row m-3 gap-2">
                        <label asp-for="CookTimeInMinutes" class="ml-1">Cook Time</label>
                        <input asp-for="CookTimeInMinutes" >
                        <span asp-validation-for="CookTimeInMinutes" class="text-danger ml-1"></span>
                    </div>
                    <div class="d-flex flex-row m-3 gap-2">
                        <label asp-for="AdditionalTimeInMinutes" class="ml-1">Additional Time</label>
                        <input asp-for="AdditionalTimeInMinutes" >
                        <span asp-validation-for="AdditionalTimeInMinutes" class="text-danger ml-1"></span>
                    </div>
                    <div class="d-flex flex-row m-3 gap-2">
                        <label asp-for="Serving" class="ml-1"></label>
                        <input type="number" asp-for="Serving" class="form-control">
                        <span asp-validation-for="Serving" class="text-danger ml-1"></span>
                    </div>
                    <div class="d-flex flex-row m-3 gap-2">
                        <label asp-for="RecipeImg" class="ml-1">Image</label>
                        <input asp-for="RecipeImg" class="form-control">
                        <span asp-validation-for="RecipeImg" class="text-danger ml-1"></span>
                    </div>
                </div>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-success">Add Recipe</button>
            </div>
        </form>
    </div>
</div>