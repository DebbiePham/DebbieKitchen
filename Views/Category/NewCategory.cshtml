@{
    ViewData["Title"] = "New Category";
    Layout="_Layout";
}

@model Category


<div class="card relative px-4 py-10 bg-white mx-8 md:mx-0 shadow-lg rounded-3xl sm:p-10">
        @* <div class="card-body max-w-md mx-auto"> *@
            @* top of the form *@
            <div class="card-title flex items-center text-center space-x-5">
                <h2 class="font-semibold text-xl">Create New Category</h2>
            </div>
            @* body of the form *@
            <form asp-action="CreateCategory" asp-controller="Category" method="post">
                <div class="card-body divide-y divide-gray-200">
                    <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">

                        <div class="flex flex-col">
                            <label asp-for="CategoryName" class="leading-loose"></label>
                            <input asp-for="CategoryName" type="text"
                                class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600">
                            <span asp-validation-for="CategoryName" class="text-red-600"></span>
                        </div>

                        <div class="flex flex-col">
                            <label asp-for="CategoryImg" class="leading-loose"></label>
                            <input asp-for="CategoryImg" type="text"
                                class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600">
                            <span asp-validation-for="CategoryImg" class="text-red-600"></span>

                        </div>

                        <div class="flex flex-col">
                            <label asp-for="Description" class="leading-loose"></label>
                            <textarea asp-for="Description" type="text" rows="4"
                                class="textarea textarea-bordered textarea-xs w-full max-w-xs sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600">
                            </textarea>
                            <span asp-validation-for="Description" class="text-red-600"></span>
                        </div>
                        
                    </div>


                    @* form footer *@
                    <div class="card-actions pt-4 flex items-center space-x-4">
                        <button
                            class= "flex justify-center items-center w-20 text-white px-4 py-3 rounded-md focus:outline-none btn-success ">
                            Create
                        </button>
                    </div>
                </div>
            </form>
        
    </div>